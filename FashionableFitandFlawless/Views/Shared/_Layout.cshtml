    <div class="body-content bodycont-fluid">
        @RenderBody()
    </div><br />

    <div class="footer container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">

            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 footerrow">
                <span>
                    @DateTime.Now.Year - Fashionable, Fit and Flawless
                </span><br />
                <span>
                    <a href="https://www.facebook.com/FashionableFitandFlawless/" target="_blank" style="color:white; background-color: blue; font:600">
                        <span>Like Us on Facebook</span>
                    </a>
                </span>

            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">

            </div>
        </div>
    </div>
    
   
  
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
         $(function () {
    $("#txtSearch").autocomplete({
    source: '@Url.Action("GetProduct", "Items")'
    });
    $("#txtSearch2").autocomplete({
    source: '@Url.Action("GetProduct", "Items")'
    });
    });
    </script>
</body>
</html>
