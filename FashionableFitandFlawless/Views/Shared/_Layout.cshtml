@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" href="~/Content/Images/ffflogoresized.jpg" type="image/x-icon" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fashionable, Fit and Flawless</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    
    <div class="Layout">

        <div class="visible-lg visible-md">
            <div class="row eachrow">

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    @using (Html.BeginForm("DisplayItem", "Items", FormMethod.Get))
                    {

                        <input type="text" id="txtSearch" class="form-control" placeholder="Search products..." name="product" />
            <button type="submit" class="btn btn-default" style="background-color:cornsilk">Submit</button>
            
                    }
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/Content/Images/ffflogoresized.jpg" class="img-responsive" />
                        <div class="caption" style="color:black">
                            Fashionable, Fit and Flawless
                        </div>
                    </a>
                </div>

                <div class="col-lg-2 col-md-2">
                    @if (Request.IsAuthenticated && User.IsInRole("President"))
                    {
                        <div class="dropdown2">
                            <div class="dropbutt eachcont" href="#">
                                Admin Area<b class="caret"></b>
                            </div>
                            <ul class="dropdown2-cont">

                                <li>@Html.ActionLink("Add Furniture", "Create", "Furnitures")</li>

                                <li>@Html.ActionLink("All Furniture List", "Index", "Furnitures")</li>



                                <li class="divider"></li>
                                <li class="dropdown-header" style="color:bisque">Banners</li>

                                <li>@Html.ActionLink("Add Banner", "Create", "BannerSlides")</li>
                                <li>@Html.ActionLink("View Banners", "Index", "BannerSlides")</li>
                                @*<li>@Html.ActionLink("Add Html Banner", "Create", "HtmlBanners")</li>
                    <li>@Html.ActionLink("View Html Banners", "Index", "HtmlBanners")</li>*@

                                <li class="divider"></li>
                                <li class="dropdown-header" style="color:bisque">Furniture Types</li>
                                <li>@Html.ActionLink("Add Role", "Create", "Roles")</li>

                                <li>@Html.ActionLink("Add Furniture Type", "Create", "FurnitureType")</li>

                                <li>@Html.ActionLink("Furniture Type List", "Index", "FurnitureType")</li>

                            </ul>

                        </div>
                    }
                </div>
                <div class="col-lg-2 col-md-2">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="dropdown2">
                                <div class="dropbutt glybut"><b class="glyphicon glyphicon-user bigglyp2"></b>  @User.Identity.GetUserName()</div>
                                <ul class="dropdown2-cont acct">
                                    <li class="hvr-bounce-to-bottom">
                                        @Html.ActionLink("Manage Account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                    </li>
                                    <li class="hvr-bounce-to-bottom"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                </ul>
                            </div>

                        }
                    }
                    else
                    {
                        <div class="dropdown2">
                            <div class="dropbutt glyphicon glyphicon-user bigglyp">Account</div>
                            <ul class="dropdown2-cont acct">
                                <li class="hvr-bounce-to-bottom">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                <li class="hvr-bounce-to-bottom">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                            </ul>
                        </div>

                    }



                </div>

                @*<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    @Html.Partial("_LoginPartial")
                </div>*@
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    @Html.Action("_CategoryList", "Categories")
                </div>
                
            </div>
        </div>

        
        <div class="visible-sm visible-xs">
            <div class="row eachrow">
                <div class="col-sm-4 col-xs-4 dropdown2">
                    <div class="dropbutt eachcont" href="#">
                       <b>Categories</b> <b class="caret"></b>
                    </div>
                    <div class="dropdown2-cont">
                        @Html.Action("_CategoryList", "Categories")
                    </div>
                </div>

                <div class="col-sm-4 col-xs-4">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/Content/Images/ffflogoresized.jpg" class="img-responsive" />
                        <div class="caption" style="color:black">
                            Fashionable, Fit and Flawless
                        </div>
                    </a>
                </div>

                <div class="col-sm-4 col-xs-4">
                    @using (Html.BeginForm("DisplayItem", "Items", FormMethod.Get))
                    {

                        <input type="text" id="txtSearch2" class="form-control" placeholder="Search products..." name="product" />
                        <button type="submit" class="btn btn-default" style="background-color:cornsilk">Submit</button>

                    }
                    
                </div>
            </div>
            <div class="row eachrow">
                <div class="col-sm-5 col-xs-6">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="dropdown2">
                                <div class="dropbutt glybut"><b class="glyphicon glyphicon-user bigglyp2"></b>  @User.Identity.GetUserName()</div>
                                <ul class="dropdown2-cont acct">
                                    <li class="hvr-bounce-to-bottom">
                                        @Html.ActionLink("Manage Account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                    </li>
                                    <li class="hvr-bounce-to-bottom"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                </ul>
                            </div>

                        }
                    }
                    else
                    {
                        <div class="dropdown2">
                            <div class="dropbutt glyphicon glyphicon-user bigglyp">Account</div>
                            <ul class="dropdown2-cont acct">
                                <li class="hvr-bounce-to-bottom">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                <li class="hvr-bounce-to-bottom">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                            </ul>
                        </div>

                    }

                    @*@Html.Partial("_LoginPartial")*@
                </div>
            </div>
        </div>



    </div>
