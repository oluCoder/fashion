@{
    ViewBag.Title = "Unique and Affordable Clothing, fitness ideas and flawless skin";
}

<div class="container-fluids">
    <div>
        <div class="container-fluids">
            <div class="row IndexPic">
                <img src="~/Content/Images/ffandf.png" class="img-responsive" />
            </div>
        </div>
    </div>
    <div class="row subLayout">

    </div>

    <div>

        <div class="container">
            <div>
                @Html.ActionLink("Add Category", "Create", "Categories")
            </div>

            <div>
                @Html.ActionLink("Add SubCategory", "Create", "SubCategories")
            </div>
            <div>
                @Html.ActionLink("Add Item", "Create", "Items")
            </div>
        </div>

        <h3>Shop by Season</h3>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 col-sm-6">
                Spring
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-sm-6">
                Summer
            </div>
            <div class="visible-lg visible-md">
                <div class="col-lg-3 col-md-3">
                    Fall
                </div>
                <div class="col-lg-3 col-md-3">
                    Winter
                </div>
            </div>

        </div>
        <div class="visible-sm visible-xs">
            <div class="col-sm-6 col-sm-6">
                Fall
            </div>
            <div class="col-sm-6 col-sm-6">
                Winter
            </div>
        </div>

        <h3>SHop by Occasion</h3>

        <div class="visible-lg visible-md">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    Casual
                </div>
                <div class="col-lg-3 col-md-3">
                    Corperate
                </div>
                <div class="col-lg-3 col-md-3">
                    Active
                </div>
                <div class="col-lg-3 col-md-3">
                    Night Out
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3 col-md-3">
                    Beach
                </div>
                <div class="col-lg-3 col-md-3">
                    Party
                </div>
                <div class="col-lg-3 col-md-3">
                    Marternity
                </div>
                <div class="col-lg-3 col-md-3">
                    Lactating Mum
                </div>
            </div>
        </div>


        <div class="visible-sm visible-xs">
            <div class="row">
                <div class="col-sm-6 col-sm-6">
                    Casual
                </div>
                <div class="col-sm-6 col-sm-6">
                    Corperate
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-6">
                    Active
                </div>
                <div class="col-sm-6 col-sm-6">
                    Night Out
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-6">
                    Beach
                </div>
                <div class="col-sm-6 col-sm-6">
                    Party
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-6">
                    Marternity
                </div>
                <div class="col-sm-6 col-sm-6">
                    Lactating Mum
                </div>
            </div>
        </div>
    </div>

</div>





